<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CoffeeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoffeeApp"
    xmlns:views="clr-namespace:CoffeeApp.View"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid
            Padding="5"
            ColumnDefinitions="0.2*,*"
            Background="{StaticResource Orange}">
            <Border
                Grid.Column="0"
                Stroke="{StaticResource LightGray}"
                HeightRequest="40"
                WidthRequest="40"
                StrokeShape="RoundRectangle 90">
                
                <Image
                    Source="cup.jpg"
                    Aspect="AspectFit" />
            </Border>
            <VerticalStackLayout
                Grid.Column="1"
                Margin="10">
                
            <Label
                
                Text="Firstname Lastname" />
            <Label
                Text="Title" />
            </VerticalStackLayout>
        </Grid>
        
            
    </Shell.FlyoutHeader>
    <Shell.FlyoutBackground>
        <LinearGradientBrush
            StartPoint="0,0"
            EndPoint="1,1">
            <GradientStop
                Color="{StaticResource DarkGray}"
                Offset="0" />
            <GradientStop
                Color="{StaticResource LightGray}"
                Offset="1" />
        </LinearGradientBrush>

    </Shell.FlyoutBackground>


    <FlyoutItem
        Title="Home"
        Icon="home_icon.png"
        >

        <ShellContent
            ContentTemplate="{DataTemplate views:MainPage}" />

    </FlyoutItem>

    <FlyoutItem
        Title="Coffee UI Challenge"
        Icon="coffee_icon.png">
        <ShellContent
            ContentTemplate="{DataTemplate views:CoffeeUI}" />
    </FlyoutItem>

